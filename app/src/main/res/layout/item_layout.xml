<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp"
        android:gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_launcher" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgVwArrow"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:src="@drawable/ic_right_arrow"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_marginTop="5sp"
                android:id="@+id/txtVwTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/relativeLayout"
                android:layout_toLeftOf="@+id/imgVwArrow"
                android:layout_toRightOf="@+id/relativeLayout"
                android:layout_toStartOf="@+id/imgVwArrow"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="uyguh"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtVwTitle"
                android:id="@+id/txtVwSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/relativeLayout"
                android:layout_toLeftOf="@+id/imgVwArrow"
                android:layout_toRightOf="@+id/relativeLayout"
                android:layout_toStartOf="@+id/imgVwArrow"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="gjhgkjjh"
                android:textColor="#808080"
                android:textSize="14sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>